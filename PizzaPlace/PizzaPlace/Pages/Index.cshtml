@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@section Styles{
    <link rel="stylesheet" type="text/css" href="~/lib/slick-1.8.1/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/slick-1.8.1/slick/slick-theme.css" />
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://www.delonghi.com/Global/recipes/multifry/97.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://upload.wikimedia.org/wikipedia/commons/d/d3/Supreme_pizza.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcS8rLGQWAZYLxuI6hbr99BEwhGsO84YyRnUlg&usqp=CAU" class="d-block w-100" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="offerContainer responsive">
    @foreach (var item in Model.SpecialOffers)
    {
        <div class="offferCard">
            <div class="offerHeader">
                <h5>@item.Title</h5>
                <div>
                    <p>$@item.Price</p>
                </div>
            </div>
            <div class="offerBody">
                <button class="btn btn-success btn">Order</button>
                <h5>Description</h5>
                <p>@item.Description</p>
                <h5>Valid to</h5>
                <span>@item.ValidTo.ToString("MMMM, dd yyyy")</span>
            </div>
        </div>
    }

</div>

@section Scripts{ 
    <script src="~/lib/slick-1.8.1/slick/slick.js"></script>
}